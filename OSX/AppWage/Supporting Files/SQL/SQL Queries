Cache calculations
-----------------
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPROMOCODE = 'CR-RW'; -- Promo Codes
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPROMOCODE = 'GP'; -- Gift Purchases
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPROMOCODE = 'GR'; -- Gift Redemption
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPRODUCTTYPEIDENTIFIER IN ("7", "7F", "7T", "F7"); -- Upgrades
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPRODUCTTYPEIDENTIFIER IN ("1", "1F", "1T", "F1"); -- Total Sales
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPRODUCTTYPEIDENTIFIER IN ("1", "1F", "1T", "F1") AND ZPROMOCODE NOT IN ('GR', 'CR-RW'); -- Paid sales
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPROFITPERUNIT = 0 AND ZPRODUCTTYPEIDENTIFIER IN ("1", "1F", "1T", "F1"); -- Free sales
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS > 0 AND ZPRODUCTTYPEIDENTIFIER IN ("IA1", "IA9", "IAY", "FI1"); -- In app purchases
SELECT * FROM ZSALESREPORTDAILY WHERE ZPROFITPERUNIT != 0; -- Total revenue
SELECT * FROM ZSALESREPORTDAILY WHERE ZUNITS < 0; -- Total refunds

-- NOTE - For revenue... Create one per currency, where units * profit * exchangeRate


